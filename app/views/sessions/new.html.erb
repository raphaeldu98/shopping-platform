<h1>Log in</h1>
<%= form_with(url: login_path, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Log in" %>
  </div>
  <div>
    <%= link_to "Return to HomePage", shopper_url %>
  </div>
<% end %>