<div id="<%= dom_id product %>" class="<%= cycle('list_line_odd', 'list_line_even')%>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <%= image_tag(product.image, style: "width: 100px; height: 150px;") %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <%= link_to "Show this product", product %>
  </p>

</div>
