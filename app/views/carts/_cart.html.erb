<div id="<%= dom_id cart %>" class="shopping-cart">

  <h2>Shopping Cart:</h2>
  <h4>Total Price: $<%= @cart.total_price %></h4>

  <div class="cart-buttons">
    <%= button_to("Empty Cart", @cart, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger") %>
    <%= button_to("Check Out", new_order_path, method: :get, class: "btn btn-success") %>
  </div>

  <ul class="cart-items">
    <% @cart.lineitems.each do |item| %>
      <li class="cart-item">
        <span class="item-name"><%= item.product.name %></span>
        <span class="item-quantity">Qty: <%= item.quantity %></span>
        <span class="item-price">$<%= item.product.price %></span>
      </li>
    <% end %>
  </ul>
</div>